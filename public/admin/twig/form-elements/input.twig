{% macro input( id, name='', value = '', type = "text", attributes = [] ) %}
	{% if name == '' %}
		{% set id = name %}
	{% endif %}
	<input
		type="{{ type }}"
		name="{{ name }}"
		value="{{ value }}"
		id="{{ id }}"
		class="ai1ec-form-control {{ attributes.class }}"
		{% for attribute, value in attributes %}
			{% if attribute != 'class' %}
				{{ attribute }}="{{ value }}"
			{% endif %}
		{% endfor %}
		/>
{% endmacro %}
