{% macro select( id, name='', attributes = [], options = [] ) %}
	{% if name == '' %}
		{% set name = id %}
	{% endif %}
	<select 
		name="{{ name }}" 
		id="{{ id }}"
		{% for attribute, value in attributes %}
			{{ attribute }}="{{ value }}"
		{% endfor %}
		>
		{% for option in options %}
			<option
				value="{{ option.value }}"
			{% if option.args is defined %}
				{% for attribute, value in option.args %}
					{{ attribute }}="{{ value }}"
				{% endfor %}
			{% endif %}
			>{{ option.text }}</option>
		{% endfor %}
		</select>
{% endmacro %}
