<li class="dropdown ai1ec-category-filter
	{% if selected_cat_ids is not empty %}active{% endif %}">
	<a class="dropdown-toggle" data-toggle="dropdown">
		<i class="icon-folder-open"></i>
		<span class="ai1ec-clear-filter ai1ec-tooltip-trigger"
			data-href="{{ clear_filter }}"
			{{ data_type | raw }}
			title="{{ 'Clear category filter' | __ }}">
			<i class="icon-remove-sign"></i>
		</span>
		{{ 'Categories' | __ }}
		<span class="caret"></span>
	</a>
	<div class="dropdown-menu">
		{% for term in categories %}
			<div data-term="{{ term.term_id }}"
				{% if term.term_id in selected_cat_ids %}class="active"{% endif %}>
				<a class="ai1ec-load-view ai1ec-category"
					{% if term.description is not empty %}
						title="{{ term.description|e('html_attr') }}"
					{% endif %}
					{{ data_type | raw }}
					href="{{ term.href }}">
					{{ term.color | raw }}
					{{ term.name }}
				</a>
			</div>
		{% endfor %}
	</div>
</li>

